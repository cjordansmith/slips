extends layout

block content
  #banner.page-header
    .row
      .col-lg-6.col-lg-offset-3.col-sm-12.centered
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8.col-sm-offset-2
      .row.list-group
        each receipt in receipts
          .col-xs-12.list-group-item
            h4
              a(href='/receipt')= receipt.name
              small.small= receipt.date
              span.badge.pull-right.badge-default= receipt.total
            p.store= receipt.store
            p
              each tag in receipt.tags
                span.label.label-warning= tag
                | &nbsp;
